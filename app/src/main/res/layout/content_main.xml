<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="art.kashmir.com.shine.MainActivity"
    tools:showIn="@layout/activity_main">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gra"
        android:orientation="vertical"
        android:translationZ="-40dp"
        android:weightSum="50">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingTop="20dp"
            android:translationZ="50dp">

            <TextView
                android:id="@+id/sunr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Sunrise"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/sunr"
                android:text="Sunrise"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/suns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Sunset"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/sunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/suns"
                android:text="Sunrise"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sunrise"
                android:fontFamily="sans-serif"
                android:paddingTop="20dp"
                android:text="Sunshine"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="45sp" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/appname"
                android:layout_alignRight="@+id/appname"
                android:layout_below="@+id/appname"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="44dp"
                android:layout_marginTop="12dp"
                android:text="25* C"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@android:color/background_light"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/sunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp"
                android:layout_centerHorizontal="true"
                android:text="Sunny"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp"
                android:layout_toRightOf="@+id/sunny" />

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sunny"
                android:background="@drawable/bt"
                android:hint="Enter City Name" />

            <Button
                android:id="@+id/go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/location"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/go"
                android:drawableStart="@drawable/go"
                android:text="Search" />

            <ProgressBar
                android:id="@+id/pr"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:translationZ="50dp" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
